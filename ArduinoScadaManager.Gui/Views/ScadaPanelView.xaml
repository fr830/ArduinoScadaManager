<UserControl x:Class="ArduinoScadaManager.Gui.Views.ScadaPanelView"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:ArduinoScadaManager.Gui.ViewModels.ScadaPanelViewModels"
             d:DataContext="{d:DesignInstance vm:ScadaPanelViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200">
    <Border BorderThickness="3" BorderBrush="Black">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="5" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ComboBox ItemsSource="{Binding ActiveSlaveModules}" SelectedIndex="0"
                      SelectedItem="{Binding SelectedSlaveModule}"/>
            <ContentControl Grid.Row="2" Content="{Binding SelectedSlaveModule}" />
        </Grid>
    </Border>
</UserControl>
